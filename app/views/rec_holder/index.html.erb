<body id="fullscreen">

  <!--START HEADER-->
  <div id="container">
    <header id="main-header" class="the-header the-origin-header">

    </header>
  </div>
  <!--END HEADER-->

  <!--BEGIN MAIN CONTENT-->

  <div style="margin-top: 0px;">
  <h1 class="text-shadow-xsmall outside" data-sr="enter top over 1s and move 50px wait 0.4s" style="text-align: center;">
    Welcome to Word of Mouth!
  </h1>
  <h4 class="outside" data-sr="enter top over 1s and move 50px wait 0.3s" style="text-align: center;">
    Thanks for taking the time to find out more about our new release strategy.
  </h4>
  </div>
</br>
  <main id="main-content" class="hero-form-layout" style="margin-bottom: 50px;">

    <!--BEGIN HERO SECTION-->
    <div class="hero-split-right"></div>

    <div class="container">

      <div class="vertical-center-wrapper">
        <div class="vertical-center-table">
          <div class="vertical-center-content">

            <!-- BEGIN Hero Content -->
            <div class="hero-content row">
              <div class="col-lg-6 col-md-6 col-sm-6 margin-top-40">
              </br>
              </br>
                <h4>
                  Watch our video to see how it works:
                </h4>

              <div class="row">
                <div class="col-lg-10">

                  <div class="embed-responsive embed-responsive-16by9" data-sr="enter bottom over 1s and move 75px">

                    <iframe src="https://www.youtube.com/embed/V8qONv4LR5E" width="100%" height="200" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

                  </div><!--/ .embed-responsive -->
                </div>
              </div><!--/ .row -->
            </div><!--/ .col-lg-6 -->

            <div class="col-lg-5 col-lg-offset-1 col-md-6 col-md-offset-0 col-sm-6 col-sm-offset-0 col-xs-10 col-xs-offset-1 centered" data-sr="over 1.25s">
            </br>
            </br>
              <h4 class="all-caps margin-bot-15">Register Your Album</h4>
              <p class="zero-bottom">
              </p>
              <div class="btn-center">
                <a href="http://wom-speaks.herokuapp.com/users/sign_up" target="_blank" class="btn awesome large register">
                  REGISTER
                </a>
              </div>
              </br>
                <h4 class="all-caps margin-bot-15">DOWNLOAD THE APP</h4>
                <p class="zero-bottom">
                </p>
                <div class="btn-center">
                  <a href="https://itunes.apple.com/us/app/word-of-mouth-speaks/id1097632336?ls=1&mt=8" target="_blank" class="btn awesome large apple">
                    <%= fa_icon 'apple 3x' %>
                  </a>
                  <a href="https://play.google.com/store/apps/details?id=hr.apps.n206975547" target="_blank" class="btn awesome large droid">
                    <%= fa_icon 'android 3x' %>
                  </a>
                </div>
              </br>
                <h4 class="all-caps margin-bot-15">Listen to the album</h4>
                <div class="btn-center">
                  <a href="http://wom-speaks.herokuapp.com/music" target="_blank" class="btn awesome large womalbum">
                    <%= fa_icon 'headphones 3x' %>
                  </a>
                </div>
            </div><!--/ .hero-form-wrapper -->

          </div><!--/ .row -->
          <!-- END Hero Content -->

        </div><!--/ .vertical-center-content -->
      </div><!--/ .vertical-center-table -->
    </div><!-- / .vertical-center-wrapper -->

  </div><!--/ .container -->

  <!--
  =======================
  ==/ END HERO SECTION ==
  =======================
  -->

</main><!--/ #main-content -->
<h4 class="outside" data-sr="enter top over 1s and move 50px wait 0.3s" style="text-align: center;">
Like or follow us to keep up to date with the release.
</h4>
<div class="btn-center">
<a href="https://www.facebook.com/wordofmouthspeaks/?fref=ts" class="btn btn-facebook facebook">
  <%= fa_icon 'thumbs-o-up 2x' %>
</a>
<a href="https://www.instagram.com/wordofmouthspeaks/" class="btn btn-instagram instagram">
  <%= fa_icon 'instagram 2x' %>
</a>
<a href="https://twitter.com/womspeaks" class="btn btn-twitter twitter">
  <%= fa_icon 'twitter 2x' %>
</a>
</div>

</body>
